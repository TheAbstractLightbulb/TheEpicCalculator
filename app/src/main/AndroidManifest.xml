<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cohen.theepiccalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".InputActivityCurrency" />
        <activity android:name=".InputActivityLength" />
        <activity android:name=".InputActivityWeight" />
        <activity android:name=".InputActivityVolume" />
        <activity android:name=".InputActivityTemperature" />
        <activity android:name=".InputActivitySpeed" />
        <activity android:name=".InputActivityArea" />
    </application>

</manifest>